<%= turbo_frame_tag request.headers['Turbo-Frame'] do %>
  <% cache(cache_key, skip_digest: true) do %>
    <div>
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full text-blue-700">
        <!-- Heroicon name: outline/check -->
        <%= heroicon 'information-circle' %>
      </div>
      <div class="mt-3 text-center sm:mt-5">
        <h3 class="font-semibold mt-4 text-lg leading-6 font-medium text-gray-900" id="modal-title"><%= @help_article.title %></h3>
        <div class="mt-2">
          <p class="text-sm text-gray-500"><%= @help_article.content %></p>
        </div>
      </div>
    </div>
    <div class="mt-5 sm:mt-6">
      <button data-controller='modal' data-action='modal#close' type="button" class="inline-flex justify-center w-full rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:text-sm">Ok</button>
    </div>
  <% end %>
<% end %>