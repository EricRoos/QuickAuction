<div class='w-full bg-white rounded-xl dark:bg-slate-700 p-8'>
  <div class="w-full">
    <div class='flex gap-8'>
      <div class='h-[300px] w-[300px] bg-gray-300 aspect-square'>
        <% if @auction_item.auction_image.present? %>
          <img class='h-full w-auto' src='<%= url_for(@auction_item.auction_image)%>' />
        <% else %>
          <svg class="w-full h-full text-gray-200" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" fill="currentColor" viewBox="0 0 640 512"><path d="M480 80C480 35.82 515.8 0 560 0C604.2 0 640 35.82 640 80C640 124.2 604.2 160 560 160C515.8 160 480 124.2 480 80zM0 456.1C0 445.6 2.964 435.3 8.551 426.4L225.3 81.01C231.9 70.42 243.5 64 256 64C268.5 64 280.1 70.42 286.8 81.01L412.7 281.7L460.9 202.7C464.1 196.1 472.2 192 480 192C487.8 192 495 196.1 499.1 202.7L631.1 419.1C636.9 428.6 640 439.7 640 450.9C640 484.6 612.6 512 578.9 512H55.91C25.03 512 .0006 486.1 .0006 456.1L0 456.1z"/></svg>
        <% end %>
      </div>
      <div class='flex flex-col'>
        <h1 class='text-4xl font-bold'><%= @auction_item.title %></h1>
        <span class='block text-2xl'><%= time_ago_in_words(@auction_item.created_at) %></span>
        <p class='my-4 prose dark:text-gray-300'><%= @auction_item.description %></p>
        <div class='flex flex-grow items-end gap-2'>
          <% if AuctionItemPolicy.new(current_user, @auction_item).destroy? %>
            <%= button_to 'Remove Auction', auction_item_path(@auction_item), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium bg-red-400" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class='flex w-full rounded-xl shadow-lg my-4 dark:bg-slate-800 bg-gray-50 divide-x'>
    <div class='flex-grow p-4 max-w-[33%]'>
      <div class='text-gray-500 mb-2'>
        Total Offers
      </div>
      <div class='text-lg font-medium dark:text-gray-400'>
        <%= @auction_item.offer_count %>
      </div>
    </div>
    <div class='flex-grow p-4 max-w-[33%]'>
      <div class='text-gray-500 mb-2'>
        <% if @auction_item.moderation_item.approved? %>
          Time Remaining
        <% else %>
          Under review
        <% end %>
      </div>
      <div class='text-lg font-medium dark:text-gray-400'>
        <% if @auction_item.moderation_item.approved? %>
          <span data-controller='countdown' data-expires-on='<%= @auction_item.expires_on.to_i %>'>
            <%= render(LoadingLineComponent.new) %>
          </span>
        <% else %>
          Hang tight while we quickly approve this auction
        <% end %>
      </div>
    </div>
    <div class='flex-grow p-4 max-w-[33%]'>
      <div class='text-gray-500 mb-2'>
        Seller Rating
      </div>
      <div class='text-lg font-medium dark:text-gray-400'>
        N/A
      </div>
    </div>
  </div>
</div>

<hr class='my-6' />

<% if AuctionOfferPolicy.new(current_user, AuctionOffer.new(auction_item: @auction_item)).new? %> 
  <div>
    <div class='text-xl font-medium dark:text-gray-400 mb-4'>Your Offer</div>
    <%= turbo_frame_tag 'new_offer', src: new_auction_item_auction_offer_path(@auction_item, format: :html) %>
  </div>
  <hr class='my-6' />
<% elsif @current_user_offer.present? %>
  <div>
    <div class='text-xl font-medium dark:text-gray-400 mb-4'>Your Offer</div>
    <%= render(AuctionOfferComponent.new(auction_offer: @current_user_offer, current_user: current_user, actions_enabled: false)) %>
  </div>
  <hr class='my-6' />
<% end %>

<div class="w-full">
  <% unless @auction_item.expired? %>
    <%= turbo_frame_tag :auction_offers, src: auction_item_auction_offers_path(@auction_item) do %>
      <div id="auction_offers" class="grid grid-cols-2 gap-8">
        <div class='grid grid-col'>
          <div class='dark:text-gray-400  text-xl font-medium mb-4'>Current accepted offer</div>
          <%= render AuctionOfferComponent.new(auction_offer: nil, loading: true, current_user: current_user) %>
        </div>
        <div class='grid grid-col'>
          <div class='dark:text-gray-400  text-xl font-medium mb-4'>Offer in consideration</div>
          <%= render AuctionOfferComponent.new(auction_offer: nil, loading: true, current_user: current_user) %>
        </div>
      </div>
    <% end %>
  <% end %>
  <% if @auction_item.expired? && @accepted_user_offer %>
    <div class='text-xl font-medium dark:text-gray-400 mb-4'>Accepted Offer</div>
    <%= render(AuctionOfferComponent.new(auction_offer: @accepted_user_offer, current_user: current_user, actions_enabled: false)) %>
  <% end %>
</div>
